<div class="d-flex justify-content-center">
  {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        {{ form_label(form.username, 'Nom de Espace talent :') }}
        {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.username) }}
      </div>

      <hr>

      <div class="form-group">
        {{ form_label(form.nbvotes, 'Nombre de votes :') }}
        {{ form_widget(form.nbvotes, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.nbvotes) }}
      </div>

      <hr>

      <div class="form-group">
        {{ form_label(form.idcat, 'Nom de categorie :') }}
        {{ form_widget(form.idcat, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.idcat) }}
      </div>

      <hr>

      <div class="form-group">
        {{ form_label(form.idu, 'Nom de user :') }}
        {{ form_widget(form.idu, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.idu) }}
      </div>

      <hr>

    </div>

    <div class="col-md-6">

      <div class="form-group">
        {{ form_label(form.image, 'Image de couverture :') }}
        {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.image) }}
      </div>

    </div>
  </div>

  <button class="btn btn-primary">{{ button_label|default('Save') }}</button>

  {{ form_end(form) }}
</div>
