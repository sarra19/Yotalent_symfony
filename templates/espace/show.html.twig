{% extends 'Back.html.twig' %}

{% block title %}Espacetalent{% endblock %}

{% block body %}
<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center">{{ espacetalent.username }}</h1>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <img src="{{ asset('uploads/' ~ espacetalent.image) }}" alt="{{ espacetalent.image }}" class="img-fluid">
                        </div>
                        <div class="col-md-6">
                            <table class="table table-striped">
                                <tbody>
                                    <tr>
                                        <th scope="row">ID</th>
                                        <td>{{ espacetalent.idest }}</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Number of votes</th>
                                        <td>{{ espacetalent.nbvotes }}</td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="text-center">
                                <a href="{{ path('app_espace_index') }}" class="btn btn-secondary">Back to list</a>
                                <a href="{{ path('app_espace_edit', {'idest': espacetalent.idest}) }}" class="btn btn-primary">Edit</a>
                                {{ include('espace/_delete_form.html.twig') }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
