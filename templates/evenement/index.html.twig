{% extends 'back.html.twig' %}

{% block title %}Evenement index{% endblock %}

{% block body %}
{% for message in app.flashes('notification') %}
        <div class="alert alert-info alert-dismissible fade show">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
    {% endfor %}

<div class="row">
    <div class="col-md-12">

      <div class="d-flex justify-content-end mb-3">
        <form class="input-group" method="get">
          <input type="text" class="form-control me-2" name="search" placeholder="Rechercher par nomev ou datedev ou localisation ou idev">
          <button type="submit" class="btn btn-outline-primary">Rechercher</button>
        </form>

        <div class="ms-3">
          <a href="{{ path('app_evenement_index', {'sort': 'nomev'}) }}" class="btn btn-outline-primary">Trier par nomev</a>
        </div>

        <div class="ms-3">
          <a href="{{ path('app_evenement_index', {'sort': 'datedev'}) }}" class="btn btn-outline-primary">Trier par datedev</a>
        </div>
         <div class="ms-3">
          <a href="{{ path('app_evenement_index', {'sort': 'localisation'}) }}" class="btn btn-outline-primary">Trier par localisation</a>
        </div>
      </div>


    <div class="table-responsive">
        <table class="table table-striped">
        <thead>
            <tr class="table-secondary">
                <th scope="col">Idev</th>
                <th scope="col">Nomev</th>
                <th scope="col">Datedev</th>
                <th scope="col">Datefev</th>
                <th scope="col">Localisation</th>
                <th scope="col">Imageev</th>
                <th scope="col">actions</th>
                </tr>
        </thead>
 <tbody>
    
            {% for evenement in evenements %}
            <tr>
                <td>{{ evenement.idev }}</td>
                <td>{{ evenement.nomev }}</td>
                <td>{{ evenement.datedev}}</td>
                <td>{{ evenement.datefev}}</td>
                <td>{{ evenement.localisation }}</td>
                <td><img src="{{ asset('uploads/' ~evenement.imageev) }}" style=" width:150px; height:150px; " alt=""/></td>
                <td>
                <div class="d-flex justify-content-center">
                     <a href="{{ path('app_evenement_show', {'idev': evenement.idev}) }}"class="btn btn-primary px-3 py-1"><i class="fas fa-eye"></i> show</a>
                    <a href="{{ path('app_evenement_edit', {'idev': evenement.idev}) }}"class="btn btn-success px-3 py-1"><i class="fas fa-edit"></i> edit</a>
                    <a >{{ include('evenement/_delete_form.html.twig') }}</a>
                  </div>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
<div class="d-flex justify-content-center">
    <a href="{{ path('app_evenement_new') }}" class="btn btn-primary px-3 py-1"> <i class="fas fa-plus"></i>Create new</a>
    </div>
    </div>
  </div>
{% endblock %}

