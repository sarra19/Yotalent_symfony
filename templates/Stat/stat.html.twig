{% extends 'Back.html.twig' %}

{% block body %}
    <h1>Statistiques des Refund</h1>
    {% if stats %}
        <div style="max-width: 600px;">
            <canvas id="myChart"></canvas>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script>
            const labels = [{% for stat in stats %}"{{ stat.dc}}", {% endfor %}];
            const data = [{% for stat in stats %}{{ stat.count }}, {% endfor %}];
            const backgroundColors = [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ];
            const borderColors = [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ];
            const datasets = [{
                label: 'dc',
                data: data,
                backgroundColor: backgroundColors,
                borderColor: borderColors,
                borderWidth: 1
            }];
            const dataObj = {
                labels: labels,
                datasets: datasets
            };
            const options = {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true,
                            stepSize: 1
                        }
                    }]
                }
            };
            const ctx = document.getElementById('myChart').getContext('2d');
            const myChart = new Chart(ctx, {
                type: 'bar',
                data: dataObj,
                options: options
            });
        </script>
    {% else %}
        <p>Aucune statistique disponible.</p>
    {% endif %}
{% endblock %}