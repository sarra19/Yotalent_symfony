{% extends 'Back.html.twig' %}


{% block title %}Planning index{% endblock %}

{% block body %}
	
{% for message in app.flashes('notification') %}
        <div class="alert alert-info alert-dismissible fade show">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
    {% endfor %}

<div class="row">
    <div class="col-md-12">

      <div class="d-flex justify-content-end mb-3">
        <form class="input-group" method="get">
         <input type="search" id="myInput" class="form-control pl-6" placeholder="Search "/>
					
					<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
					<script>
						$(document).ready(function () {
                        $("#myInput").on("keyup", function () {
                        var value = $(this).val().toLowerCase();
                        $("#rs tr").filter(function () {
                        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                            });
                         })
                        });
					</script>
        </form>
 <div class="ms-3">
          <a href="{{ path('app_planning_index', {'sort': 'hour'}) }}" class="btn btn-outline-primary">Trier par hour</a>
        </div>

        <div class="ms-3">
          <a href="{{ path('app_planning_index', {'sort': 'nomactivite'}) }}" class="btn btn-outline-primary">Trier par nomactivite</a>
        </div>
         <div class="ms-3">
          <a href="{{ path('app_planning_index', {'sort': 'datepl'}) }}" class="btn btn-outline-primary">Trier par datepl</a>
        </div>
      </div>
      </div>
<div class="table-responsive">
        <table class="table table-striped" id="rs">
        <thead>
            <tr class="table-secondary">
                <th scope="col">Idp</th>
                <th scope="col">Hour</th>
                <th scope="col">Nomactivite</th>
                <th scope="col">Datepl</th>
                 <th scope="col">NomEv</th>
                <th scope="col">actions</th>
                
            </tr>
        </thead>

 <tbody>
            {% for planning in plannings %}
            <tr>
                <td>{{ planning.idp }}</td>
                <td>{{ planning.hour }}</td>
                <td>{{ planning.nomactivite }}</td>
                <td>{{ planning.datepl }}</td>
                <td>{{ planning.idev }}</td>
                <td>
               <div class="d-flex justify-content-center">
                   <a href="{{ path('app_planning_show', {'idp': planning.idp}) }}"class="btn btn-primary px-3 py-1"><i class="fas fa-eye"></i>show</a>
                      <a href="{{ path('app_planning_edit', {'idp': planning.idp}) }}"class="btn btn-success px-3 py-1"><i class="fas fa-edit"></i>edit</a> 
                     <a >{{ include('planning/_delete_form.html.twig') }}</a>
                    </div>  
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
 </div>
<div class="d-flex justify-content-center">
    <a href="{{ path('app_planning_new') }}" class="btn btn-primary px-3 py-1" ><i class="fas fa-plus"></i>Create new</a>
     <a href="{{ path('generator_services') }}" class="btn btn-primary px-3 py-1"> <i class="fas fa-plus"></i>PDF</a>
     </div>
    </div>
{% endblock %}




