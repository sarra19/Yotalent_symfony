
{% extends 'Back.html.twig' %}

{% block title %}Contrat index{% endblock %}

{% block body %}
  <div class="row">
    <div class="col-md-12">

      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr class="table-secondary">
              <th scope="col">ID</th>
              <th scope="col">Nom du contrat</th>
              <th scope="col">Date de début du contrat</th>
              <th scope="col">Date de fin du contrat</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            {% for contrat in contrats %}
              <tr>
                <td>{{ contrat.idc }}</td>
                <td>{{ contrat.nomc }}</td>
                <td>{{ contrat.DateDC }}</td>
                <td>{{ contrat.DateFC }}</td>
                <td>
                  <div class="d-flex justify-content-center">
                    <a href="{{ path('app_contrat_show', {'idc': contrat.idc}) }}" class="btn btn-primary me-2"><i class="fas fa-eye"></i> Voir</a>
                    <a href="{{ path('app_contrat_edit', {'idc': contrat.idc}) }}" class="btn btn-success me-2"><i class="fas fa-edit"></i> Modifier</a>
                                                         {{ include('contrat/_delete_form.html.twig') }}

                  </div>
                </td>
              </tr>
            {% else %}
              <tr>
                <td colspan="5">Aucun enregistrement trouvé</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>

      <div class="d-flex justify-content-center">
        <a href="{{ path('app_contrat_new') }}" class="btn btn-primary"><i class="fas fa-plus"></i> Créer un nouveau contrat</a>
              <a href="{{ path('api_generate_pdf') }}" class="btn btn-warning"><i class="fas fa-plus"></i>  generer pdf</a>

      </div>
    </div>
  </div>
{% endblock %}