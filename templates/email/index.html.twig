{% extends 'Front.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block body %}
<div class="container">
  <hr>
  <h2 class="text-center">Contactez-nous</h2>
  
  <form method="post">
    <div class="row">
      <div class="col-md-6 mb-3">
        <label for="inputEmail" class="form-label">Email</label>
        <input type="email" class="form-control" id="inputEmail" name="expediteur" placeholder="Votre adresse e-mail" required>
      </div>
      <div class="col-md-6 mb-3">
        <label for="inputSubject" class="form-label">Sujet</label>
        <input type="text" class="form-control" id="inputSubject" name="sujet" required>
      </div>
    </div>
    
    <div class="mb-3">
      <label for="inputMessage" class="form-label">Message</label>
      <textarea class="form-control" id="inputMessage" name="message" rows="4" required></textarea>
    </div>
    
    <button type="submit" class="btn btn-primary" name="sendmail">Envoyer</button>
  </form>
</div>
{% endblock %}