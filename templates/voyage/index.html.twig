


{% extends 'Back.html.twig' %}

{% block title %}Voyage index{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">

<div class="d-flex justify-content-end mb-3">
       <form action="{{ path('app_voyage_index') }}" method="get">
  <div class="row">
    <div class="col-md-12">
      <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Rechercher par idvoy , datervoy ou datedvoy" name="searchQuery" value="{{ app.request.query.get('searchQuery') }}">
        <button class="btn btn-outline-secondary" type="submit"><i class="fas fa-search"></i></button>
      </div>
    </div>
  </div>
</form>

        <div class="ms-3">
          <a href="{{ path('app_voyage_index', {'sort': 'idvoy'}) }}" class="btn btn-outline-primary">Trier par idvoy</a>
        </div>

        <div class="ms-3">
          <a href="{{ path('app_voyage_index', {'sort': 'datedvoy'}) }}" class="btn btn-outline-primary">Trier par datedvoy</a>
        </div>
        <div class="ms-3">
          <a href="{{ path('app_voyage_index', {'sort': 'datervoy'}) }}" class="btn btn-outline-primary">Trier par datervoy</a>
        </div>
        
      </div>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr class="table-secondary">
                            <th scope="col">ID</th>
                            <th scope="col">Date de début</th>
                            <th scope="col">Date de fin</th>
                            <th scope="col">Destination</th>
                            <th scope="col">Actions</th>
                             <th scope="col">Map</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for voyage in voyages %}
                            <tr>
                                <td>{{ voyage.idvoy }}</td>
                                <td>{{ voyage.datedvoy }}</td>
                                <td>{{ voyage.datervoy }}</td>
                                <td>{{ voyage.destination }}</td>
                                
                                <td>
                                    <div class="d-flex justify-content-center">
                                        <a href="{{ path('app_voyage_show', {'idvoy': voyage.idvoy}) }}" class="btn btn-primary me-2"><i class="fas fa-eye"></i> Voir</a>
                                        
                                        <a href="{{ path('app_voyage_edit', {'idvoy': voyage.idvoy}) }}" class="btn btn-success me-2"><i class="fas fa-edit"></i> Modifier</a>
                                        {{ include('voyage/_delete_form.html.twig') }}

                                       <a href="{{ path('app_voy_map', {'idvoy': voyage.idvoy}) }}" class="fas fa-map-marker-alt"></a>

                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">Aucun enregistrement trouvé</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-center">
                <a href="{{ path('app_voyage_new') }}" class="btn btn-primary"><i class="fas fa-plus"></i> Créer un nouveau voyage</a>
            </div>
        </div>
    </div>
{% endblock %}