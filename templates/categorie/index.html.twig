{% extends 'Back.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center mb-4">Categorie List</h1>

      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">Idcat</th>
              <th scope="col">Nomcat</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            {% for categorie in categories %}
            <tr>
              <td>{{ categorie.idcat }}</td>
              <td>{{ categorie.nomcat }}</td>

              <td>
                <div class="d-flex justify-content-center">
                  <a href="{{ path('app_categorie_show', {'idcat': categorie.idcat}) }}" class="btn btn-primary me-2">Show</a>
                  <a href="{{ path('app_categorie_edit', {'idcat': categorie.idcat}) }}" class="btn btn-success me-2">Edit</a>
                  {{ include('categorie/_delete_form.html.twig') }}
                </div>
              </td>
            </tr>
            {% else %}
            <tr>
              <td colspan="3">No records found</td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>

      <div class="d-flex justify-content-center">
        <a href="{{ path('app_categorie_new') }}" class="btn btn-primary">Create new</a>
      </div>
    </div>
</div>
{% endblock %}
