{% extends 'Back.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center">Category</h1>
                </div>
                <div class="card-body">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Idcat</th>
                                <td>{{ categorie.idcat }}</td>
                            </tr>
                            <tr>
                                <th>Nomcat</th>
                                <td>{{ categorie.nomcat }}</td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="text-center">
                        <a href="{{ path('app_categorie_index') }}" class="btn btn-secondary">back to list</a>
                        <a href="{{ path('app_categorie_edit', {'idcat': categorie.idcat}) }}" class="btn btn-primary">edit</a>
                        {{ include('categorie/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
