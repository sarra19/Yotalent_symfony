{% extends 'Front.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}

<div class="gallery-hive section-padding before-after bg-white">
    <center><h2>Categorie</h2></center>
    <div class="container">
        <div class="row">
            {% for categorie in categories %}
            <div class="col-md-6">
                <div class="gallery-item">
                    <div id="carousel-{{ categorie.idcat }}" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            {% if categorie.nomcat == 'Danse' %}
                            <div class="carousel-item active">
                                <img class="img-fluid" src="../2.jpg" alt="Image">

                            </div>
                            <div class="carousel-item">
                                <img class="img-fluid" src="../33.jpg" alt="Image">
                            </div>
                            <div class="carousel-item">
                                <img class="img-fluid" src="../333.jpg" alt="Image">
                            </div>
                            {% elseif categorie.nomcat == 'Theatre' %}
                            <div class="carousel-item active">
                                <img class="img-fluid" src="../1.jpg" alt="Image">
                            </div>
                              <div class="carousel-item">
                                <img class="img-fluid" src="../11.jpg" alt="Image">
                            </div>
                              <div class="carousel-item">
                                <img class="img-fluid" src="../111.jpg" alt="Image">
                            </div>
                            {% elseif categorie.nomcat == 'Musique' %}
                            <div class="carousel-item active">
                              
                              
                                <img class="img-fluid" src="../22.jpg" alt="Image">
                            </div>
                            <div class="carousel-item">
                                <img class="img-fluid" src="../222.jpg" alt="Image">
                            </div>
                            {% elseif categorie.nomcat == 'Design' %}
                            <div class="carousel-item active">
                                <img class="img-fluid" src="../55.jpg" alt="Image">
                            </div>
                              <div class="carousel-item">
                                <img class="img-fluid" src="../555.jpg" alt="Image">
                            </div>
                             <div class="carousel-item">
                                <img class="img-fluid" src="../5555.jpg" alt="Image">
                            </div>
                            {% elseif categorie.nomcat == 'Peinture' %}
                            <div class="carousel-item active">
                                <img class="img-fluid" src="../6.jpg" alt="Image">
                            </div>
                              <div class="carousel-item">
                                <img class="img-fluid" src="../66.jpg" alt="Image">
                            </div>
                               <div class="carousel-item">
                                <img class="img-fluid" src="../6666.jpg" alt="Image">
                            </div>
                            {% elseif categorie.nomcat == 'Litt√©raire' %}
                            <div class="carousel-item active">
                                <img class="img-fluid" src="../7.jpg" alt="Image">
                            </div>
                              <div class="carousel-item">
                                <img class="img-fluid" src="../4444.jpg" alt="Image">
                                                            

                            </div>
                              <div class="carousel-item">
                                <img class="img-fluid" src="../444.jpg" alt="Image">
                            </div>
                            {% else %}
                            <div class="carousel-item active">
                                <img class="img-fluid" src="../10.jpg" alt="Image">
                            </div>
                              <div class="carousel-item">
                                <img class="img-fluid" src="../4.jpg" alt="Image">
                            </div>
                            {% endif %}
                        </div>
                        <a class="carousel-control-prev" href="#carousel-{{ categorie.idcat }}" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carousel-{{ categorie.idcat }}" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                    <div class="gallery-info">
                        <ul class="list-inline">
                            <center>
                                <li><i class="fa fa-star-o"></i><h2>{{ categorie.nomcat }}</h2></li>
                            </center>
                        </ul>
                    </div>
                    <div class="gallery-button">
                        <div class="text-center">
                            <a href="{{ path('app_espace_max', {'idcat': categorie.idcat}) }}" class="btn btn-primary">Voir Espaces Talent</a>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div><!-- row -->
    </div><!-- container -->
</div><!-- gallery hive -->  

{% endblock %}
