<div class="container my-4">
  <div class="card">
    
    <div class="card-body">
      <div class="row justify-content-center">
        <div class="col-md-6">
          {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
          <div class="form-group">
            {{ form_label(form.nomcat, 'Name of Category :') }}
            {{ form_widget(form.nomcat, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.nomcat) }}
          </div>
          <hr>
          <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
          {{ form_end(form) }}
        </div>
      </div>
    </div>
  </div>
</div>
